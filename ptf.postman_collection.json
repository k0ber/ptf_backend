{
  "info": {
    "_postman_id": "18463388-7143-45b1-94c8-fcea9e83b942",
    "name": "Patifiner API v0.2.0",
    "description": "Полная коллекция актуальных роутов Patifiner. Обновлено после рефакторинга DAO/Services и введения Language Enum.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. User & Auth",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var data = pm.response.json();",
                  "if(data.token) {",
                  "    pm.environment.set('jwt_token', data.token.accessToken);",
                  "    pm.environment.set('refresh_token', data.token.refreshToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"Password123\"\n}"
            },
            "url": { "raw": "{{base_url}}/user/create" }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var data = pm.response.json();",
                  "if(data.accessToken) {",
                  "    pm.environment.set('jwt_token', data.accessToken);",
                  "    pm.environment.set('refresh_token', data.refreshToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"Password123\"\n}"
            },
            "url": { "raw": "{{base_url}}/user/login" }
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var data = pm.response.json();",
                  "if(data.accessToken) {",
                  "    pm.environment.set('jwt_token', data.accessToken);",
                  "    pm.environment.set('refresh_token', data.refreshToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": { "raw": "{{base_url}}/user/refresh" }
          }
        },
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
            ],
            "url": { "raw": "{{base_url}}/user/me" }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Updated\",\n  \"gender\": \"MALE\",\n  \"birthDate\": \"1995-01-01\",\n  \"locale\": \"EN\",\n  \"cityId\": 1\n}"
            },
            "url": { "raw": "{{base_url}}/user/update" }
          }
        },
        {
          "name": "Set Avatar",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://api.patifiner.ru/files/photo1.jpg\"\n}"
            },
            "url": { "raw": "{{base_url}}/user/me/avatar" }
          }
        },
        {
          "name": "Add Photo (Multipart)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": [] }
              ]
            },
            "url": { "raw": "{{base_url}}/user/me/photo" }
          }
        },
        {
          "name": "Delete Photo",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://api.patifiner.ru/files/photo1.jpg\"\n}"
            },
            "url": { "raw": "{{base_url}}/user/me/photo" }
          }
        }
      ]
    },
